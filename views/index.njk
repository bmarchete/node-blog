{% extends "layout.njk" %}

{% block content %}

{% include "partials/banner.njk" %}

<div class="container">
  <div class="section">

    <h1 class="thin" style="font-size:3rem;">Ãšltimos Artigos</h1>
    <hr>

    <div class="row">

      <div class="col s12 m4">
        <div class="card horizontal hoverable">

          <div class="card-stacked">
            <div class="card-content">

              <div class="row">
                <div class="col s6 m6">
                  <h5>{{post.title}}</h5>
                </div>

                <div class="col s6 m6">
                  <p class="right-align" style="font-size: .9rem;">
                    Postado em 12-12-12 por <strong>{{post.author}}</strong>
                  </p>
                </div>

              </div>

              <p>{{post.brief}}</p>
            </div>
            <div class="card-action">
              <a class="waves-effect waves-yellow blue btn" href="/posts/{{post._id}}">Mais...</a>

              <a class="red lighten-1 btn"
              onclick="event.preventDefault();
              document.getElementById('delete-form-{{post._id}}').submit();">
              Excluir
            </a>

            <form id="delete-form-{{post._id}}" action="/posts/{{post._id}}" method="POST" style="display: none;">
              <input type="hidden" name="_method" value="DELETE" />
            </form>
          </div>
        </div>
      </div>
    </div>



  </div>
</div>

</div>
{% endblock %}
