{% extends "layout.njk" %}

{% block content %}

<div class="container">
  <div class="section">

    <h1 class="thin" style="font-size:3rem;">Artigos do Blog</h1>
    <hr>

    {% for post in posts %}
    <div class="row">

      <div class="col s12 m12">
        <div class="card horizontal hoverable">

          <div class="card-stacked">
            <div class="card-content">

              <div class="row">
                <div class="col s6 m6">
                  <h5>{{post.title}}</h5>
                </div>

                <div class="col s6 m6">
                  <p class="right-align" style="font-size: .9rem;">
                    Postado em {{moment(post.date).format("DD/MM/YYYY HH:mm")}} por <strong>{{post.author}}</strong>
                  </p>
                </div>

              </div>

              <p>{{post.brief}}</p>
            </div>
            <div class="card-action">
              <a class="waves-effect waves-yellow blue btn" href="/posts/{{post._id}}">Mais...</a>

          </div>
        </div>
      </div>
    </div>


  </div>

</div>
{% endfor %}
</div>
</div>
{% endblock %}
